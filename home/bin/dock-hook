#!/bin/bash
# Set up user-account params for docking

printf "running user hook for dock status" | systemd-cat -t dock-hook

# When udev calls this, there won't be DISPLAY set, so do that here
if [[ -z "$DISPLAY" ]]; then
    export DISPLAY=:0
fi

# Set the xrandr settings first
$HOME/bin/dock-xrandr

# See if the docking station is attached
if xrandr | grep -q 'DP-1-1 connected'; then
    # Link the right location for music
    ln -sf '/mnt/wilkins/Music/Library' /home/cpence/Music
else
    # Link the right location for music
    ln -sf '/mnt/dekutree/Music/Library' /home/cpence/Music
fi

# Reset wallpaper
nitrogen --restore

# Reload i3 to catch the DPI change, except for the first time we run
if [[ "$1" != "--no-restart" ]]; then
  i3-msg restart
fi

